<?xml version="1.0" encoding="utf-8"?>
<com.thumbstage.hydrogen.view.browse.BrowseItemCardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/publishedOpenedItem_setting"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/publishedOpenedItem_name"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/publishedOpenedItem_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/publishedOpenedItem_name"
            android:text="@string/app_name" />
    </RelativeLayout>
</com.thumbstage.hydrogen.view.browse.BrowseItemCardView>