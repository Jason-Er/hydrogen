<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_browse_topic_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/item_topic_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/item_browse_topic_layout_avatar"
            android:layout_width="65dp"
            android:layout_height="match_parent">

            <!--TextView
                android:id="@+id/item_browse_topic_type"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="T"
                android:textColor="@android:color/black"
                android:textSize="10sp" /-->

            <ImageView
                android:id="@+id/item_browse_topic_avatar"
                style="@style/LCIMAvatar.Large"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/item_browse_topic_unread"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@drawable/lcim_read_badge"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_browse_topic_layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_browse_topic_name"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/item_browse_topic_begin_time"
                    style="@style/LCIMTextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_browse_topic_brief"
                style="@style/LCIMTextAppearance.Normal.Gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>