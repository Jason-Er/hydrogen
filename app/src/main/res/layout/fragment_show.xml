<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fragment_show_bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_show_pullrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_show_bottom_bar">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_show_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextSwitcher
        android:id="@+id/fragment_show_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_show_bottom_bar"
        android:inAnimation="@anim/slide_in_down"
        android:outAnimation="@anim/slide_out_up"/>
    <include
        android:id="@+id/fragment_show_bottom_bar"
        layout="@layout/layout_show_bottom_bar" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/layout_loading_spinner"/>
</RelativeLayout>